<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>	

	<!-- Alias 설정 -->
	<typeAliases>
		<typeAlias alias="user" type="com.springbook.biz.user.UserVO" />
		<typeAlias alias="board" type="com.springbook.biz.board.BoardVO" />
		<typeAlias alias="reply" type="com.springbook.biz.reply.ReplyVO"/>
		<typeAlias alias="Criteria" type="com.springbook.biz.board.Criteria" />
		<typeAlias alias="mark" type="com.springbook.biz.mark.MarkVO" />
	</typeAliases>
	
	<!-- Sql Mapper 설정 -->
	<mappers>
		<mapper resource="mappings/user-mapping.xml" />
		<mapper resource="mappings/board-mapping.xml" />
		<mapper resource="mappings/reply-mapping.xml"/>
		<mapper resource="mappings/mark-mapping.xml"/>
	</mappers>
</configuration>